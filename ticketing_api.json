{
	"info": {
		"name": "Ticketing System API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"admin_user\",\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123456\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "http://localhost:8080/api/v1/auth/register"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123456\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "http://localhost:8080/api/v1/auth/login"
					}
				}
			]
		},
		{
			"name": "Events",
			"item": [
				{
					"name": "Create Event (with Tickets)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Lễ hội âm nhạc 2026\",\n  \"slug\": \"music-festival-2026\",\n  \"location\": \"Sân vận động Mỹ Đình\",\n  \"banner_url\": \"https://example.com/banner.jpg\",\n  \"start_time\": \"2026-06-15T19:00:00Z\",\n  \"end_time\": \"2026-06-16T02:00:00Z\",\n  \"ticket_types\": [\n    {\n      \"name\": \"VIP Ticket\",\n      \"price\": 2000000,\n      \"initial_quantity\": 100\n    },\n    {\n      \"name\": \"Standard Ticket\",\n      \"price\": 500000,\n      \"initial_quantity\": 1000\n    },\n    {\n      \"name\": \"Early Bird\",\n      \"price\": 300000,\n      \"initial_quantity\": 200\n    }\n  ]\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "http://localhost:8080/api/v1/events/"
					}
				},
				{
					"name": "Get Event by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": "http://localhost:8080/api/v1/events/{{event_id}}"
					}
				},
				{
					"name": "Get Event by Slug",
					"request": {
						"method": "GET",
						"header": [],
						"url": "http://localhost:8080/api/v1/events/slug/music-festival-2026"
					}
				},
				{
					"name": "List Events",
					"request": {
						"method": "GET",
						"header": [],
						"url": "http://localhost:8080/api/v1/events?limit=10&offset=0"
					}
				}
			]
		}
	]
}